@using Microsoft.AspNetCore.Mvc.Localization
@model AddUserVM
@inject IViewLocalizer localizer
<form method="post" asp-action="Add" asp-controller="AppUsers">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@localizer["Rol Ekle"]</h3>
        </div>

        <div class="card-body" style="display: block;">
           
            <div class="form-group">
                <input type="text" asp-for="UserName" class="form-control" placeholder="@localizer["Kullanıcı Adı"]" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@localizer["İsim"]" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" asp-for="LastName" class="form-control" placeholder="@localizer["Soyisim"]" class="form-control"/>
            </div>
            <div class="form-group">
                <input /> 
                <select>
                    <option></option>
                </select>
                <input/>
            </div>
        </div>
        <div class="card-footer">

            <a asp-action="GetAll" asp-controller="AppRoles" class="btn btn-secondary col-2">@localizer["Geri Dön"]</a>
            <input type="submit" value="@localizer["Rol Ekle"]" class="btn btn-success col-2 float-right">
        </div>
    </div>
</form>